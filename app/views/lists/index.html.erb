<div class="container py-4">
  <h1 class="mb-3">My Lists</h1>

  <!-- link para criar nova lista -->
  <%= link_to "New list", new_list_path, class: "btn btn-primary mb-3" %>

  <!-- listagem simples -->
  <ul class="list-group">
    <% @lists.each do |list| %>
      <li class="list-group-item d-flex justify-content-between">
        <span><%= list.name %></span>
        <%= link_to "Open", list_path(list), class: "btn btn-outline-secondary btn-sm" %>
      </li>
    <% end %>
  </ul>
</div>

<div class="container py-4">
  <h1 class="mb-4">Minhas listas</h1>

  <div class="row g-4">
    <% @lists.each do |list| %>
      <div class="col-12 col-sm-6 col-lg-4">
        <div class="card h-100 shadow-sm">
          <%# Capa da lista %>
          <% if list.photo.attached? %>
            <%= cl_image_tag list.photo.key,
                  width: 600, height: 350, crop: :fill,
                  class: "card-img-top" %>
          <% else %>
            <%# Fallback: imagem local em app/assets/images/placeholder.jpg %>
            <%= image_tag "placeholder.jpg", class: "card-img-top" %>
          <% end %>

          <div class="card-body">
            <h5 class="card-title">
              <%= link_to list.name, list_path(list), class: "stretched-link text-decoration-none" %>
            </h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
